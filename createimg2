

VMNAME=test
USERNAME=user
VMSIZE=2G

create_img() {
   trap "error_handler_int_whonix_image" ERR INT TERM

   sudo -u $USERNAME mkdir -p /home/user/grml-debootstraptestbin

#      --keep_src_list \

   grml-debootstrap \
      --arch i386 \
      --filesystem ext4 \
      --force \
      --hostname host \
      --mirror http://127.0.0.1:3142/debian \
      --password changeme \
      --release wheezy \
      --verbose \
      --vmfile \
      --vmsize "$VMSIZE" \
      --config "./grml_config" \
      --packages "./"$VMNAME"_packages" \
      --target /home/user/grml-debootstraptestbin/"$VMNAME".img
}

create_img

# results in /etc/apt/sources.list
#deb http://127.0.0.1:3142/debian wheezy main contrib non-free
#deb http://security.debian.org wheezy/updates main contrib non-free
